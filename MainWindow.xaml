<Window x:Class="ImageComments.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageComments"
        mc:Ignorable="d"
        Title="ImageComments" Height="450" Width="800"
        Icon="/image-icon-256x256.ico">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="FileNameTextBlock" Grid.Row="0" Margin="0,0,0,5" 
                  TextWrapping="Wrap" FontWeight="Bold"/>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
            <TextBlock Text="Select Field: " VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="FieldsComboBox" Width="200" 
                     SelectionChanged="FieldsComboBox_SelectionChanged"/>
        </StackPanel>
        
        <TextBox x:Name="CommentTextBox" Grid.Row="2" Margin="0,5" 
                TextWrapping="Wrap" AcceptsReturn="True" 
                VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
        
        <Button x:Name="CopyButton" Grid.Row="3" Content="Copy to Clipboard" 
               HorizontalAlignment="Right" Padding="10,5" Margin="0,5,0,0"
               Click="CopyButton_Click"/>
    </Grid>
</Window>
